{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=YOUR_SERVER;Database=MDAyuda;User Id=YOUR_USER;Password=YOUR_PASSWORD;TrustServerCertificate=true;"
  },
  "DatabaseProvider": "SqlServer",
  "EnableSwaggerInProduction": false,
  "Jwt": {
    "Key": "CHANGE_THIS_TO_A_SECURE_KEY_AT_LEAST_32_CHARACTERS_LONG_FOR_PRODUCTION",
    "Issuer": "MDAyuda",
    "Audience": "MDAyuda",
    "ExpirationMinutes": 60
  },
  "Email": {
    "SmtpServer": "YOUR_SMTP_SERVER",
    "Port": 587,
    "Username": "YOUR_EMAIL",
    "Password": "YOUR_EMAIL_PASSWORD",
    "FromEmail": "noreply@yourdomain.com",
    "FromName": "MDAyuda"
  },
  "FileUpload": {
    "MaxFileSizeBytes": 10485760,
    "AllowedExtensions": ".jpg,.jpeg,.png,.gif,.pdf,.doc,.docx,.xls,.xlsx,.txt",
    "UploadPath": "wwwroot/uploads"
  }
}
